<div class="new-food-container d-grid justify-content-center mt-2">
    <h1>Create New Category</h1>
  <%= form_with model: @group, url: user_group_index_path(current_user.id) do |f| %>
    <div class="form-group">
        <div class="form-outline mb-4">
            <%= f.label :name %><br />
            <%= f.text_field :name, class: "form-control form-control-lg" %>
        </div>
       <div class="form-outline mb-4">
            <%= f.label :icon, class: "form-label" %><br />
            <%= f.text_field :icon, placeholder: "Insert A valid icon link", class: "form-control form-control-lg" %>
        </div>
        <div class="form-outline mb-4">
       <!-- Button trigger modal -->
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
          View Exaples of Image URL for Category
          </button>
          <!-- Modal -->
          <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
          <div class="modal-content">
          <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Category Image Links</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
          <ul class="list-group">
            <li class="list-group-item">Food: 'https://shorturl.at/swyJ0'</li>
            <li class="list-group-item">Drinks: 'https://cdn-icons-png.flaticon.com/512/820/820603.png'</li>
            <li class="list-group-item">Shoes: 'https://shorturl.at/uyAC5'</li>
            <li class="list-group-item">Clothing: 'https://shorturl.at/hmvLX' </li>
            <li class="list-group-item">Movies: 'https://shorturl.at/dhwX8' </li>
          </ul>
          </div>
          <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
          </div>
          </div>
          </div>
        </div>
        <div class="submit-btn">
             <%= f.submit 'Add Category',  class: "btn btn-primary btn-lg btn-block"  %>
        </div>
    </div>
    <% end %>
</div>